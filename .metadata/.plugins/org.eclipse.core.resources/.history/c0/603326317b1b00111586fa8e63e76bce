#include <CLRHeader.h>
#include <FileStream.h>

using namespace System;
using namespace System::IO;
int main() {
	StdString sampletext = "Opening file...\0";
Array<byte> mtest = Array<byte>((byte*)sampletext.cstr(),sampletext.Length()*sizeof(UChar));
//mtest.GetArray()[0] = 8;
Console::WriteLine((UChar*)mtest.GetArray());

	FileStream* mstr = new FileStream("hi.txt");
	Array<byte> mray = Array<byte>(sizeof(UChar)*4);
	StdString mystring = "test";
	memcpy(mray.GetArray(),(byte*)mystring.cstr(),sizeof(UChar)*4);
	mstr->Write(mray,0,mray.Length);
	mstr->Flush();
	return 0;
}
